{% set title = "Giới thiệu về nhà trọ" %}
{% set css_file = "profile" %}  {# Chỉ định file CSS cho trang này #}
{% include 'user/header.twig' %}

 <!-- Nav -->
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <!-- Toggle button for mobile view -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCentered" aria-controls="navbarCentered" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar content -->
        <div class="collapse navbar-collapse" id="navbarCentered">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/type_room">Loại phòng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/new_room">Phòng mới</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/service">Dịch vụ</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main>
    {% block page %}
    <div class="container mt-5">
        <h1 class="mb-4 d-flex justify-content-center">Thông tin cá nhân</h1>

        <!-- Thông tin cá nhân -->
        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">{{ user.name }}</h3>
                <p class="card-text">Email: {{ user.email }}</p>
                <p class="card-text">Ngày tham gia: {{ user.created_at }}</p>
            </div>
        </div>

        <!-- Phòng đã đặt -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Phòng đã đặt</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for room in rooms %}
                    <li class="list-group-item">{{ room.name }} - {{ room.status }}</li>
                    {% else %}
                    <li class="list-group-item">Không có phòng đã đặt</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Tenant -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Tenant</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for tenant in tenants %}
                    <li class="list-group-item">{{ tenant.name }} - {{ tenant.status }}</li>
                    {% else %}
                    <li class="list-group-item">Không có tenant</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Hợp đồng -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Hợp đồng</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for contract in contracts %}
                    <li class="list-group-item">{{ contract.id }} - {{ contract.status }} - {{ contract.total_amount }}</li>
                    {% else %}
                    <li class="list-group-item">Không có hợp đồng</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Dịch vụ liên quan -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Dịch vụ liên quan</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for service in services %}
                    <li class="list-group-item">{{ service.name }} - {{ service.description }}</li>
                    {% else %}
                    <li class="list-group-item">Không có dịch vụ</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

    </div>
    {% endblock %}
</main>





{% include 'user/footer.twig' %}

</body>
</html>

