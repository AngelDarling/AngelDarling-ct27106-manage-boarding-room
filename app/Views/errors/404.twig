{# {% extends "layouts/default.twig" %} #}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<style>
    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f8f9fa; /* màu nền nhẹ nhàng */
        color: #333; /* màu chữ */
    }
</style>
</head>
{# {% block title %}{{ APPNAME }}{% endblock %} #}
<main>
    <div class="d-flex justify-content-center" style="height: 100vh;">
        <img src="/assets/img/404.gif" alt="Error Image" class="img-fluid" />
    </div>
    <div class="my-1 d-flex justify-content-center">
        {% if role == 'ADMIN' %}
            <a href="/admin/dashboard" class="btn btn-primary btn-lg me-1">
                <i class="fa fa-home"></i> Về trang quản trị
            </a>
        {% elseif role == 'USER' %}
            <a href="/" class="btn btn-primary btn-lg me-1">
                <i class="fa fa-home"></i> Về trang chủ
            </a>
        {% else %}
            <p>PageNotFound</p>
        {% endif %}

    </div>
</main>
    